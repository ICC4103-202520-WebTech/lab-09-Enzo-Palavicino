<% content_for :title, "Forgot password" %>

<div class="row justify-content-center">
  <div class="col-lg-5">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h1 class="h3 mb-3 text-center">Forgot your password?</h1>
        <p class="text-muted text-center mb-4">Enter your email address to receive reset instructions.</p>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%= form_with model: resource, as: resource_name, url: password_path(resource_name), data: { turbo: false } do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
          </div>

          <div class="d-grid">
            <%= f.submit "Send reset instructions", class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
