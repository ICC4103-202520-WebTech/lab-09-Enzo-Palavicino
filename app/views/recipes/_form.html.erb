<%= form_with(model: recipe, class: "recipe-form") do |form| %>
  <% if recipe.errors.any? %>
    <div class="alert alert-danger">
      <h2 class="h5 mb-3"><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>
      <ul class="mb-0">
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true, autofocus: true %>
  </div>

  <div class="row g-3">
    <div class="col-md-6">
      <%= form.label :cook_time, class: "form-label" %>
      <%= form.number_field :cook_time, class: "form-control", min: 0, placeholder: "Minutes" %>
    </div>
    <div class="col-md-6">
      <%= form.label :difficulty, class: "form-label" %>
      <%= form.select :difficulty, Recipe::DIFFICULTY_LEVELS, { prompt: "Select difficulty" }, class: "form-select" %>
    </div>
  </div>

  <div class="mt-3">
    <%= form.label :instructions, class: "form-label" %>
    <%= form.rich_text_area :instructions, class: "form-control" %>
  </div>

  <div class="d-flex gap-2 mt-4">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", recipe.persisted? ? recipe : recipes_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
